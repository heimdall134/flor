---
import Contactform from "@/components/contactform.astro";
import { Icon } from "astro-icon/components";
---

<div
    class="bg-[#f9f9f9] p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center"
>
    <h2 class="text-black text-4xl md:text-6xl tracking-tight">
        ¡Contáctanos!
    </h2>
    <p class="text-slate-400 mt-4 text-lg md:text-xl">
        Cualquier duda que tengas, siempre estamos disponibles para ayudarte.
    </p>
    <div class="w-full mt-16">
        <Contactform />
    </div>
</div>
<div
    class="p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center"
>
    <h2 class="text-black text-4xl md:text-6xl tracking-tight">Sucursales</h2>
    <div class="mt-16 grid grid-cols-1 md:grid-cols-1 gap-10 w-full">
        <>
            <div class="mt-5 grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Sucursal 1 - Condesa, CDMX -->
                <div
                    class="p-4 bg-[#f9f9f9] rounded-lg shadow text-left space-y-3"
                >
                    <h3 class="font-bold">CDMX, Condesa</h3>
                    <div class="flex items-center mt-2 space-x-2 text-gray-600">
                        <Icon class="text-gray-400 w-4 h-4" name="uil:phone" />
                        <a href="tel:+34614509052">+52 559 130 84 82</a>
                    </div>
                    <div class="flex items-center mt-2 space-x-2 text-gray-600">
                        <Icon
                            class="text-gray-400 w-8 h-8"
                            name="uil:map-marker"
                        />
                        <span
                            >Av. Veracruz 93, Colonia Condesa, Cuauhtémoc, 06140
                            Ciudad de México, CDMX, Mexico</span
                        >
                    </div>
                    <div class="aspect-video">
                        <iframe
                            class="w-full h-full rounded-lg"
                            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d940.7274955299544!2d-99.173002!3d19.416295!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1ffee290ef185%3A0x29c8111b02bbb3bc!2sFlor!5e0!3m2!1sen!2ses!4v1756469156686!5m2!1sen!2ses"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"
                        ></iframe>
                    </div>
                </div>

                <!-- Sucursal 2 - San Pedro, Monterrey -->
                <div
                    class="p-4 bg-[#f9f9f9] rounded-lg shadow text-left space-y-3"
                >
                    <h3 class="font-bold">Monterrey, NL</h3>

                    <div class="flex items-center mt-2 space-x-2 text-gray-600">
                        <Icon class="text-gray-400 w-4 h-4" name="uil:phone" />
                        <a href="tel:+34614509052">+52 812 315 77 71</a>
                    </div>
                    <div class="flex items-center mt-2 space-x-2 text-gray-600">
                        <Icon
                            class="text-gray-400 w-8 h-8"
                            name="uil:map-marker"
                        />
                        <span
                            >Gomez Morin 900 plaza vita, segundo piso,
                            Carrizalejo, 66254 San Pedro Garza García, N.L.,
                            Mexico</span
                        >
                    </div>

                    <div class="aspect-video">
                        <iframe
                            class="w-full h-full rounded-lg"
                            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d14387.469244480095!2d-100.361939!3d25.642529!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8662bda82d2ae547%3A0x811495d19f61a13a!2sFLOR%20CARPET%20MONTERREY!5e0!3m2!1sen!2ses!4v1756469559476!5m2!1sen!2ses"
                            style="border:0;"
                            allowfullscreen=""
