---
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Contact">
    <Container class="p-24">
        <Sectionhead>
            <Fragment slot="title">Catalogo</Fragment>
            <Fragment slot="desc"
                >La gran mayoría de nuestros diseños están aquí.</Fragment
            >
        </Sectionhead>
        <div class="relative pt-0 w-full h-[400px] lg:h-[800px]">
            <iframe
                class="absolute top-0 left-0 w-full h-full border-0"
                src="https://online.fliphtml5.com/ghblx/scez/"
                seamless="seamless"
                scrolling="no"
                frameborder="0"
                allowtransparency="true"
                allowfullscreen="true"></iframe>
        </div>
        <div class="flex items-center justify-center mt-6">
            <a
                href="/public/downloads/catalogo.pdf"
                download
                class="inline-block px-6 py-3 bg-black text-white rounded-md hover:bg-gray-500 transition"
                aria-label="Descargar catálogo PDF"
            >
                Descargar Catálogo
            </a>
        </div>
    </Container>
</Layout>
